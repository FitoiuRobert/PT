#include <stdio.h>


int main(void)
{
  char c;
  FILE *fp;
  int n=0;

  fp = fopen("in.txt","r");

  if(fp = NULL)
    fprintf(stderr,"fopen():");
  else
    {
      while((c = getchar()) != EOF) fprintf(stdout,"%c",c),++n;
      fprintf("\nJust read %d character!"),n;
      
    }
  
  return 0;
}
